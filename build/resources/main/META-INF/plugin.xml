<idea-plugin>
  <id>controller.guide.excel</id>
  <name>NexGen Guide Generator</name>
  <version>1.0</version>
  <vendor>NexGenMES</vendor>
  <description>Generate Excel API docs</description>
  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.modules.java</depends>
  <idea-version since-build="251.23774" until-build="251.*" />
  <actions>
    <action id="GenerateControllerExcelAction" class="com.example.BizExcelAction" text="Generate NexGen Biz Guide" description="Generate NexGen Biz Guide Excel from Class">
      <add-to-group group-id="ProjectViewPopupMenu" anchor="last" />
      <add-to-group group-id="EditorPopupMenu" anchor="last" />
      <add-to-group group-id="ToolsMenu" anchor="last" />
    </action>
    <action id="GenerateCoreExcelAction" class="com.example.CoreExcelAction" text="Generate NexGen Core Guide" description="Generate NexGen Core Guide Excel from Class">
      <add-to-group group-id="ProjectViewPopupMenu" anchor="last" />
      <add-to-group group-id="EditorPopupMenu" anchor="last" />
      <add-to-group group-id="ToolsMenu" anchor="last" />
    </action>
    <action id="GenerateCoreTestResultExcelAction" class="com.example.CoreTestResultExcelAction" text="Generate NexGen Core Test Result" description="Generate NexGen Core Test Result Excel from Class">
      <add-to-group group-id="ProjectViewPopupMenu" anchor="last" />
      <add-to-group group-id="EditorPopupMenu" anchor="last" />
      <add-to-group group-id="ToolsMenu" anchor="last" />
    </action>
  </actions>
</idea-plugin>
